@model famiLYNX.Models.ConversationViewModel

<div class="messagetitle">@Model.Conversation.Topic</div>
<div class="closebox"></div>
<div class="subscribeToggle"><img src="..\Content\checkmark.png" alt="going" onclick="" /></div>
@{
    if (Model.Conversation.MessageList.Count > 0) {
        foreach (var msg in Model.Conversation.MessageList) {
            <p class="messagetext">@msg.Text<span style="font-style: italic; float: right">&nbsp;&nbsp;&ndash;&nbsp;&nbsp;@msg.Contributor.FirstName</span></p>
        }

    }
    using (Html.BeginForm("Create", "Messages")) {
        @Html.TextBox("MessageText", "", new { @placeholder = "Add a Contibution", @class = "inputText" });
        @Html.Hidden("ConversationId", Model.Conversation.Id);
        @Html.Hidden("FamilyId", Model.FamilyId);
        @Html.Hidden("MemberUserName", Model.UserName);
        <input type="submit" value="GO" />
    }
}